<% content_for :title, "Login" %>

<div class="d-flex justify-content-center">
  <div class="d-flex flex-column vh-100 justify-content-center vw-100 max-w500">
    <div class="container p-md-5 p-2 border">
      <%= form_for :user do |f| %>
        <div class="form-floating mb-3">
          <%= f.text_field :username, class: "form-control", placeholder: "Enter username" %>
          <label for="user_username">Username</label>
        </div>
        <div class="form-floating mb-3 mt-3">
          <%= f.text_field :password, class: "form-control", placeholder: "Enter password" %>
          <label for="user_password">Password</label>
        </div>
        <div class="invalid-feedback d-block">
          <p><%= @error %></p>
        </div>
        <div>
          <%= f.submit "Login", class: "btn btn-primary mx-2" %>
          <%= link_to "Create account", users_create_path %>
        </div>
      <% end %>
    </div>
  </div>
</div>